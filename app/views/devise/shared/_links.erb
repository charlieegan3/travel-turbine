<%= link_to 'Back',:root, :class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>

<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<% if request.original_url.include? 'users' %>
		<%= link_to "Sign up", new_registration_path(resource_name),:class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>
  <% end %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-default btn-block", :style => 'margin-top: 5px;' %>
  <% end -%>
<% end -%>
