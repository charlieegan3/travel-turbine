<div class="container" style="max-width: 300px;">

<h2>Reset Password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :class => 'form-signin') do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email Address' %>

  <div><%= f.submit "Send Reset Instructions", :class => 'btn btn-lg btn-primary btn-block', :style => 'margin-top: 5px;' %></div>
<% end %>

</div>
