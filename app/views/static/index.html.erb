<div class="container">
      <div class="masthead"></div>
      <div class="jumbotron">
        <div style class="alert alert-dismissable visible-xs alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <b>Warning! </b>We've noticed you're using a mobile phone, if we had an app on the app store we'd have a link here!
        </div>
        <h1>Catchy Name</h1>
        <p class="lead">Select your search criteria below and we'll do the rest.</p>
        <div class="row">
          <div class="col-md-5">
            <select id="originselect" class="form-control">
              <% @locations.each do |l|%>
              <option><%= l.name %></option>
              <% end %>
            </select>
          </div>
          <div class="col-md-2">
            <p>traveling to<br></p>
          </div>
          <div class="col-md-5">
            <select id="destinationselect" class="form-control">
              <% @locations.each do |l|%>
              <option><%= l.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <input id="datepicker" placeholder="Date" class="form-control" type="text">
            <a id="searchbutton" class="btn btn-primary btn-sm" style="margin-top: 5px;">Search</a>
          </div>
          <div class="col-md-4"></div>
        </div>
        <p></p>
        <div id="results">
        <!-- results go here! -->
        </div>
        </div>
      </div>
    </div>

<script type="text/javascript">
	$(document).ready(function() {
		$("#searchbutton").click(function() {
			var origin = document.getElementById("originselect").value;
			var destination = document.getElementById("destinationselect").value;
			var query = "journey/new?origin="+origin+"&destination="+destination+"&date=211113"
 			$("#results").load(query)
		})
	})
</script>


